{
  "applications": {
    "gecko": {
      "id": "{08cc31c0-b1cb-461c-8ba2-95edd9e76a02}"
    }
  },
  "manifest_version": 2,
  "name": "Update bookmark",
  "version": "1.5.0",
  "description": "This add-on allows to replace or update an existing bookmark title and/or URL with a minimal click count..",
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon48.png",
    "theme_icons": [{
        "light": "icons/icon32-light.png",
        "dark": "icons/icon32.png",
        "size": 32
    }],
    "default_title": "Update bookmark",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "commands": {
    "update-url": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Send a 'update-url' event to the extension"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      }
    }
  }
}
